<p id="notice"><%= notice %></p>

<h1>Adresses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Line 1</th>
      <th>Line 2</th>
      <th>Country</th>
      <th>City</th>
      <th>Zip</th>
      <th>Long</th>
      <th>Lat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adresses.each do |adress| %>
      <tr>
        <td><%= adress.name %></td>
        <td><%= adress.line_1 %></td>
        <td><%= adress.line_2 %></td>
        <td><%= adress.country %></td>
        <td><%= adress.city %></td>
        <td><%= adress.zip %></td>
        <td><%= adress.long %></td>
        <td><%= adress.lat %></td>
        <td><%= link_to 'Show', adress %></td>
        <td><%= link_to 'Edit', edit_adress_path(adress) %></td>
        <td><%= link_to 'Destroy', adress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


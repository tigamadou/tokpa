<div class="container">
  <%= render 'user/account_nav'%>
  <div class="row">
    <div class="col-md-9">
      <h1>My Account</h1>
      <p>Welcome <%= current_user.profile.first_name%></p>
      <h4><%= link_to 'My Orders ', orders_path %> </h4>
      <table class="table ">
        <thead>
          <tr>
            <th>Reference</th>
            <th>Total</th>
            <th>Paid</th>
            <th>User</th>
            <th>Vendor</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% current_user.orders.each do |order| %>
            <tr>
              <td><%= order.reference %></td>
              <td><%= order.total %></td>
              <td><%= order.paid %></td>
              <td><%= order.user_id %></td>
              <td><%= order.vendor_id %></td>
              <td><%= link_to 'Show', order %></td>
              <td><%= link_to 'Edit', edit_order_path(order) %></td>
              <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <h4> <%= link_to 'My Addresses', addresses_path %>  </h4>
      <table  class="table ">
        <thead>
          <tr>
            <th>Name</th>
            <th>Line 1</th>
            <th>Line 2</th>
            <th>Country</th>
            <th>City</th>
            <th>Zip</th>
            <th>Long</th>
            <th>Lat</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% current_user.addresses.each do |adress| %>
            <tr>
              <td><%= adress.name %></td>
              <td><%= adress.line_1 %></td>
              <td><%= adress.line_2 %></td>
              <td><%= adress.country %></td>
              <td><%= adress.city %></td>
              <td><%= adress.zip %></td>
              <td><%= adress.long %></td>
              <td><%= adress.lat %></td>
              <td><%= link_to 'Show', adress %></td>
              <td><%= link_to 'Edit', edit_address_path(adress) %></td>
              <td><%= link_to 'Destroy', adress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <% if current_user.profile.image.attached? %>
        <%= cl_image_tag current_user.profile.image.key, :width=>150, :crop=>"fill" %>
      <% end %>
      <p>
        <strong>First name:</strong>
        <%= current_user.profile.first_name %>
      </p>
      <p>
        <strong>Last name:</strong>
        <%= current_user.profile.last_name %>
      </p>
      <p>
        <strong>Phone 1:</strong>
        <%= current_user.profile.phone_1 %>
      </p>
      <p>
        <strong>Phone 2:</strong>
        <%= current_user.profile.phone_2 %>
      </p>
      <%= link_to 'Edit Profile', edit_profile_path %>
    </div>
  </div>
</div>

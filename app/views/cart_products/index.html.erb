<p id="notice"><%= notice %></p>
<h1>Cart Products</h1>
<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Total</th>
      <th>Cart</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_products.each do |cart_product| %>
      <tr>
        <td><%= cart_product.quantity %></td>
        <td><%= cart_product.total %></td>
        <td><%= cart_product.cart_id %></td>
        <td><%= cart_product.product_id %></td>
        <td><%= link_to 'Show', cart_product %></td>
        <td><%= link_to 'Edit', edit_cart_product_path(cart_product) %></td>
        <td><%= link_to 'Destroy', cart_product, method: :delete, data: { confirm: t('defaults.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Cart Product', new_cart_product_path %>

<header class="header header-14">
  <div class="header-middle">
    <div class="container-fluid">
      <div class="row">
        <div class="col-auto col-lg-3 col-xl-3 col-xxl-2">
          <button class="mobile-menu-toggler">
            <span class="sr-only">Toggle mobile menu</span>
            <i class="icon-bars"></i>
          </button>
          <%= link_to 'Tokpa', root_path, class: "navbar-brand fs-1"%>
        </div>
        <!-- End .col-xl-3 col-xxl-2 -->
        <div class="col col-lg-9 col-xl-9 col-xxl-10 header-middle-right">
          <div class="row">
            <div class="col-lg-8 col-xxl-4-5col d-none d-lg-block">
              <div class="header-search header-search-extended header-search-visible header-search-no-radius">
                <a href="#" class="search-toggle" role="button"><i class="icon-search"></i></a>
                <%= form_with(model: @product, url: search_path, method: 'GET') do |form| %>
                  <div class="header-search-wrapper search-wrapper-wide">
                    <div class="select-custom">
                      <%= form.select(:category_id, options_for_select(@categories.collect{ |v| [v.name,v.id] }),{:include_blank => "All Departments"}) %>
                    </div>
                    <label for="q" class="sr-only">Search</label>
                    <input type="search" class="form-control" name="q" id="q" placeholder="Search product ..." required>
                    <button class="btn btn-primary" type="submit"><i class="icon-search"></i></button>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="col-lg-4 col-xxl-5col d-flex justify-content-end align-items-center">
              <div class="header-dropdown-link">
                <% if !user_signed_in? %>
                  <div class="dropdown compare-dropdown">
                    <a href="<%= new_user_session_path %>" class=""  title="Login" aria-label="Compare Products">
                      <span class="compare-txt">Login</span>
                    </a>
                  </div>
                  <div class="dropdown compare-dropdown">
                    <a href="<% new_user_registration_path %>" class="dropdown-toggle" title="Compare Products" aria-label="Compare Products">
                      <span class="compare-txt">Register</span>
                    </a>
                  </div>
                <% else %>
                  <div class="dropdown compare-dropdown">
                    <a href="<%= user_root_path %>" class=""  title="Login" aria-label="Compare Products">
                      <span class="compare-txt">Account</span>
                    </a>
                  </div>
                  <div class="dropdown compare-dropdown">
                    <a href="<%= destroy_user_session_path %>" class="" data-method="delete"  title="Login" aria-label="Compare Products">
                      <span class="compare-txt">Sign Out</span>
                    </a>
                  </div>
                <% end %>
                <div class="dropdown cart-dropdown">
                  <a href="#" class="dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">
                    <i class="icon-shopping-cart"></i>
                    <span class="cart-count">2</span>
                    <span class="cart-txt">Cart</span>
                  </a>
                  <!-- End .dropdown-menu -->
                </div>
                <!-- End .cart-dropdown -->
              </div>
            </div>
            <!-- End .col-xxl-5col -->
          </div>
          <!-- End .row -->
        </div>
        <!-- End .col-xl-9 col-xxl-10 -->
      </div>
      <!-- End .row -->
    </div>
    <!-- End .container-fluid -->
  </div>
  <!-- End .header-middle -->
  <div class="header-bottom sticky-header">
    <div class="container-fluid">
      <div class="row">
        <div class="col-auto col-lg-3 col-xl-3 col-xxl-2 header-left">
          <div class="dropdown category-dropdown show is-on" data-visible="true">
            <a href="#" class="dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static" title="Browse Categories">
              Browse Categories
            </a>
            <div class="dropdown-menu show">
              <nav class="side-nav">
                <ul class="menu-vertical sf-arrows">
                  <% @categories.each do |category| %>
                    <li class="megamenu-container">
                      <%= link_to "#{category.name.truncate(25)}", category_path(category.slug), class: 'icon-laptop' %>
                      <% if category.subcategories.count > 0 %>
                        <div class="megamenu">
                          <div class="row no-gutters">
                            <div class="col-md-8">
                              <div class="menu-col">
                                <div class="row">
                                  <div class="col-md-6">
                                    <ul>
                                      <% get_subcategories_pages(category, 1).each do |item| %>
                                        <li><%= link_to "#{item.name}", subcategory_path(item.category.slug,item.slug) %></li>
                                      <% end %>
                                    </ul>
                                  </div>
                                  <div class="col-md-6">
                                    <ul>
                                      <% get_subcategories_pages(category, 2).each do |item| %>
                                        <li><%= link_to "#{item.name}", subcategory_path(item.category.slug,item.slug) %></li>
                                      <% end %>
                                    </ul>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <div class="col-md-4">
                              <div class="banner banner-overlay">
                                <%= link_to  category_path(category.slug), class: 'banner banner-menu' do %>
                                  <% if category.image.attached? %>
                                    <%= cl_image_tag category.image.key, :width=>280,:height => 440, :crop=>"fill" %>
                                  <% end %>
                                <% end %>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </li>
                  <% end %>
                  <li><%= link_to "All Categories", categories_path, class: 'icon-laptop' %></li>
                </nav>
              </div>
            </div>
          </div>
          <div class="col col-lg-6 col-xl-6 col-xxl-8 header-center">
            <nav class="main-nav">
              <ul class="menu sf-arrows">
                <li class="megamenu-container active">
                  <%= link_to "Home", root_path, class: 'sf-with-ul' %>
                </li>
                <li>
                  <%= link_to "Categories", categories_path, class: 'sf-with-ul' %>
                  <!-- End .megamenu megamenu-md -->
                </li>
                <li>
                  <%= link_to "Vendors", vendors_path, class: 'sf-with-ul' %>
                  <!-- End .megamenu megamenu-sm -->
                </li>
              </ul>
              <!-- End .menu -->
            </nav><!-- End .main-nav -->
          </div>
          <!-- End .col-xl-9 col-xxl-10 -->
          <div class="col col-lg-3 col-xl-3 col-xxl-2 header-right">
            <i class="la la-lightbulb-o"></i>
            <p>Clearance Up to 30% Off</span></p>
        </div>
      </div>
      <!-- End .row -->
    </div>
    <!-- End .container-fluid -->
  </div>
  <!-- End .header-bottom -->
</header>

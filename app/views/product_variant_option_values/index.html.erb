<h1>Product Variant Option Values</h1>

<table>
  <thead>
    <tr>
      <th>Product variant</th>
      <th>Product variant option</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_variant_option_values.each do |product_variant_option_value| %>
      <tr>
        <td><%= product_variant_option_value.product_variant_id %></td>
        <td><%= product_variant_option_value.product_variant_option_id %></td>
        <td><%= link_to 'Show', product_variant_option_value %></td>
        <td><%= link_to 'Edit', edit_product_variant_option_value_path(product_variant_option_value) %></td>
        <td><%= link_to 'Destroy', product_variant_option_value, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


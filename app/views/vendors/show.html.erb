<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @vendor.name %>
</p>
<p>
  <strong>Description:</strong>
  <%= @vendor.description %>
</p>
<p>
  <% if current_user.vendor.image && current_user.vendor.image.attached? %>
    <%= cl_image_tag current_user.vendor.image.key, :width=>150, :crop=>"fill" %>
  <% end %>
</p>
<p>
  <% if current_user.vendor.cover && current_user.vendor.cover.attached? %>
    <%= cl_image_tag current_user.vendor.cover.key, :width=>900, :crop=>"fill" %>
  <% end %>
</p>
<p>
  <strong>Online:</strong>
  <%= @vendor.online %>
</p>
<p>
  <strong>Legal name:</strong>
  <%= @vendor.legal_name %>
</p>
<p>
  <strong>Incorporation date:</strong>
  <%= @vendor.incorporation_date %>
</p>
<p>
  <strong>Registration date:</strong>
  <%= @vendor.registration_date %>
</p>
<p>
  <strong>Registration address:</strong>
  <%= @vendor.registration_address %>
</p>
<p>
  <strong>Registration number:</strong>
  <%= @vendor.registration_number %>
</p>
<p>
  Followers : <%= current_user.vendor.followers.count%>
</p>
<p>
  <strong>Verified:</strong>
  <%= @vendor.verified %>
</p>
<p>
  <strong>Activated:</strong>
  <%= @vendor.activated %>
</p>
<%= link_to 'Edit', edit_vendor_path(@vendor) %> |

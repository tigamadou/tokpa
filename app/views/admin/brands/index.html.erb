<h1>Brands</h1>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Activated</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td>
          <% if brand.image.attached? %>
            <%= cl_image_tag brand.image.key, :width=>150, :crop=>"fill" %>
          <% end %>
        </td>
        <td><%= brand.name %></td>
        <td><%= brand.activated %></td>
        <td><%= link_to 'Show', admin_brand_path(brand) %></td>
        <td><%= link_to 'Edit', edit_admin_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', admin_brand_path(brand), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Brand', new_admin_brand_path %>

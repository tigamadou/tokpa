<%= form_with(model: option, url: url) do |form| %>
  <% if option.errors.any? %>
    <%= render 'messages/form', element: option%>
  <% end %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<div class='d-flex justify-content-between align-items-center'>
  <h1>Options</h1>
  <%= link_to 'New Option', new_admin_option_path, class: 'btn btn-primary' %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @options.each do |option| %>
      <tr>
        <td><%= option.name %></td>
        <td><%= option.slug %></td>
        <td><%= link_to 'Show', admin_option_path(option) %></td>
        <td><%= link_to 'Edit', edit_admin_option_path(option) %></td>
        <td><%= link_to 'Destroy', admin_option_path(option), method: :delete, data: { confirm: t('defaults.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

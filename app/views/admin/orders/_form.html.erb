<%= form_with(model: order, url: url) do |form| %>
  <% if order.errors.any? %>
    <%= render 'messages/form', element: order%>
  <% end %>
  <div class="form-group">
    <%= form.label :reference %>
    <%= form.text_field :reference, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :total %>
    <%= form.text_field :total, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :paid %>
    <%= form.check_box :paid %>
  </div>
  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :vendor_id %>
    <%= form.text_field :vendor_id, class: "form-control" %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<div class='d-flex justify-content-between align-items-center'>
  <h1>Orders</h1>
  <%= link_to 'New Order', new_admin_order_path, class: 'btn btn-primary' %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Reference</th>
      <th>Total</th>
      <th>Paid</th>
      <th>User</th>
      <th>Vendor</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.reference %></td>
        <td><%= order.total %></td>
        <td><%= order.paid %></td>
        <td><%= order.user_id %></td>
        <td><%= order.vendor_id %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_admin_order_path(order) %></td>
        <td><%= link_to 'Destroy', admin_order_url(order), method: :delete, data: { confirm: t('defaults.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

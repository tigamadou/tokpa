<div class='d-flex justify-content-between align-items-center'>
  <h1>Products Variants</h1>
  <%= link_to 'New Product Variant', new_admin_product_variant_path, class: 'btn btn-primary' %>
</div>
<table class='table'>
  <thead>
    <tr>
      <th>Image</th>
      <th>Price</th>
      <th>Sku</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @variants.each do |variant| %>
      <tr>
        <td>
          <% if variant.image.attached? %>
            <%= cl_image_tag variant.image.key, :width=>100,height:100, :crop=>"fill" %>
          <% end %>
        </td>
        <td><%= variant.price %></td>
        <td><%= variant.sku %></td>
        <td><%= variant.quantity %></td>
        <td><%= link_to 'Show', admin_product_variant_path(variant.product, variant) %></td>
        <td><%= link_to 'Edit', edit_admin_product_variant_path(variant.product, variant) %></td>
        <td><%= link_to 'Destroy', admin_product_variant_path(variant.product, variant), method: :delete, data: { confirm: t('defaults.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

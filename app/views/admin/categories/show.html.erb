<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>
<p>
  <strong>Image:</strong>
  <% if @category.image.attached? %>
    <%= cl_image_tag @category.image.key, :width=>150, :crop=>"fill" %>
  <% end %>
</p>
<p>
  <strong>Activated:</strong>
  <%= @category.activated %>
</p>
<br/>
<h1>Subcategories</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Activated</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @category.subcategories.each do |subcategory| %>
      <tr>
        <td><%= subcategory.name %></td>
        <td><%= subcategory.slug %></td>
        <td><%= subcategory.activated %></td>
        <td><%= subcategory.category.name %></td>
        <td><%= link_to 'Show', admin_subcategory_path(subcategory) %></td>
        <td><%= link_to 'Edit', edit_admin_category_subcategory_path(subcategory.category, subcategory) %></td>
        <td><%= link_to 'Destroy', admin_subcategory_path(subcategory), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Edit', edit_admin_category_path(@category) %> |
<%= link_to 'Back', admin_categories_path %>

<div class='d-flex justify-content-between align-items-center'>
  <h1>Categories</h1>
  <%= link_to 'New Category', new_admin_category_path, class: 'btn btn-primary' %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>subcategories</th>
      <th>Activated</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>
          <% if category.image.attached? %>
            <%= cl_image_tag category.image.key, :width=>150, :crop=>"fill" %>
          <% end %>
        </td>
        <td><%= category.name %></td>
        <td><%= link_to 'Subcategories',admin_category_subcategories_path(category) %></td>
        <td><%= category.activated %></td>
        <td><%= link_to 'Show', admin_category_path(category) %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
        <td><%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: t('defaults.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

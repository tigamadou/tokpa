<h1>Categories</h1>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Slug</th>
      <th>Activated</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>
          <% if category.image.attached? %>
            <%= cl_image_tag category.image.key, :width=>150, :crop=>"fill" %>
          <% end %>
        </td>
        <td><%= category.name %></td>
        <td><%= category.slug %></td>
        <td><%= category.activated %></td>
        <td><%= link_to 'Show', admin_category_path(category) %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
        <td><%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Category', new_admin_category_path %>

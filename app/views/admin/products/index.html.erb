<div class='d-flex justify-content-between align-items-center'>
  <h1>Products</h1>
  <%= link_to 'New Product', new_admin_product_path, class: 'btn btn-primary' %>
</div>
<table class="table ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th style="width:15%">Description</th>
      <th>Active</th>
      <th>Available</th>
      <th>Validated</th>
      <th>Subcategory</th>
      <th>Brand</th>
      <th>Vendor</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.slug %></td>
        <td><%= product.description.truncate(50) %></td>
        <td><%= product.active %></td>
        <td><%= product.available %></td>
        <td><%= product.validated %></td>
        <td><%= product.subcategory_id %></td>
        <td><%= product.brand_id %></td>
        <td><%= product.vendor_id %></td>
        <td><%= link_to 'Show', admin_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: t('defaults.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

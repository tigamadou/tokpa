<p id="notice"><%= notice %></p>
<h1>Products</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Description</th>
      <th>Active</th>
      <th>Available</th>
      <th>Validated</th>
      <th>Subcategory</th>
      <th>Brand</th>
      <th>Vendor</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.slug %></td>
        <td><%= product.description %></td>
        <td><%= product.active %></td>
        <td><%= product.available %></td>
        <td><%= product.validated %></td>
        <td><%= product.subcategory_id %></td>
        <td><%= product.brand_id %></td>
        <td><%= product.vendor_id %></td>
        <td><%= link_to 'Show', admin_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Product', new_admin_product_path %>

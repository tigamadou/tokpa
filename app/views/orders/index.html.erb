<div class="container">
  <%= render 'user/account_nav'%>
  <h1><%= Order.model_name.human.pluralize %></h1>
  <table class="table">
    <thead>
      <tr>
        <th><%= Order.human_attribute_name('reference')%></th>
        <th><%= Order.human_attribute_name('total') %></th>
        <th><%= Order.human_attribute_name('paid') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.reference %></td>
          <td><%= order.total %></td>
          <td><%= order.paid %></td>
          <td><%= link_to 'Show', order %></td>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: t('defaults.are_you_sure') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>

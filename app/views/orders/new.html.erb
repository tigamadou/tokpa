<main class="main">
  <div class="page-content">
    <div class="cart">
      <div class="container">
        <%= render 'user/account_nav'%>
        <%= form_with(model: @order) do |form|%>
          <div class="row">
            <div class="col-lg-9">
              <table class="table table-cart table-mobile">
                <thead>
                  <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% @current_cart.cart_products.each do |cart_product|%>
                    <tr>
                      <td class="product-col">
                        <div class="product">
                          <figure class="product-media">
                            <% if cart_product.product.variants.first.image.attached? %>
                              <%= cl_image_tag cart_product.product.variants.first.image.key, :width=> 500,:height => 500, :crop=>"fill", class: 'product-image' %>
                            <% end %>
                          </figure>
                          <h3 class="product-title">
                            <%= link_to "#{cart_product.product.name}", product_path(cart_product.product.slug)  %>
                          </h3>
                        </div>
                      </td>
                      <td class="price-col"> <%= cart_product.product.variants.first.price%></td>
                      <td class="quantity-col">
                        <div class="cart-product-quantity">
                          <input type="number" class="form-control" value="<%= cart_product.quantity %>" min="1"  step="1" data-decimals="0" disabled>
                        </div>
                      </td>
                      <td class="total-col"><%= cart_product.total_price%></td>
                      <td class="remove-col">
                        <%= link_to cart_product, method: :delete, class: 'btn-remove', method: :delete, data: { confirm: t('defaults.are_you_sure') } do %>
                          <i class="icon-close"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <table class="table">
                <thead>
                  <tr>
                    <th ></th>
                    <th>Name</th>
                    <th>Line 1</th>
                    <th>Line 2</th>
                    <th>Country</th>
                    <th>City</th>
                    <th>Zip</th>
                    <th>Long</th>
                    <th>Lat</th>
                  </tr>
                </thead>
                <tbody>
                  <% current_user.addresses.each do |address| %>
                    <tr>
                      <td><%= form.radio_button :address_id, address.id %></td>
                      <td><%= address.name %></td>
                      <td><%= address.line_1 %></td>
                      <td><%= address.line_2 %></td>
                      <td><%= address.country %></td>
                      <td><%= address.city %></td>
                      <td><%= address.zip %></td>
                      <td><%= address.long %></td>
                      <td><%= address.lat %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <br>
            </div>
            <aside class="col-lg-3">
              <div class="summary summary-cart">
                <h3 class="summary-title">Order Total</h3>
                <table class="table table-summary">
                  <tbody>
                    <tr class="summary-subtotal">
                      <td>Subtotal:</td>
                      <td><%= @current_cart.sub_total%></td>
                    </tr>
                    <tr class="summary-total">
                      <td>Total:</td>
                      <td><%= @current_cart.sub_total%></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </aside>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

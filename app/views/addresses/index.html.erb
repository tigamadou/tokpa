<div class="container">
  <h1>Addresses <%= link_to 'New Address', new_address_path, class: 'btn btn-primary' %></h1>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Line 1</th>
        <th>Line 2</th>
        <th>Country</th>
        <th>City</th>
        <th>Zip</th>
        <th>Long</th>
        <th>Lat</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.name %></td>
          <td><%= address.line_1 %></td>
          <td><%= address.line_2 %></td>
          <td><%= address.country %></td>
          <td><%= address.city %></td>
          <td><%= address.zip %></td>
          <td><%= address.long %></td>
          <td><%= address.lat %></td>
          <td><%= link_to 'Show', address %></td>
          <td><%= link_to 'Edit', edit_address_path(address) %></td>
          <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>

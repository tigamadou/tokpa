<h2><%= t(".sign_in") %></h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class:'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class:'form-control' } %>
  </div>
  <div class="form-check">
    <%= f.input :remember_me, as: :boolean, class: 'form-check-input' if devise_mapping.rememberable? %>
  </div>
  <div class="form-group">
    <%= f.button :submit, t(".sign_in"),class: 'btn btn-primary' %>
  </div>
<% end %>
